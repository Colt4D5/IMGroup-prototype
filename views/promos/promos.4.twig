<section id="promos" aria-label="Promos">
  <div id="promos-wrapper" class="row">
    {% for promo in promos|slice(0, 3) %}
        <div class="promo-box">
              <div class="photo" style="background-image: url({% if promo.custom_promo %} {{ Image(promo.custom_promo_image).src }} {% endif %});"></div>
            <div class="promo_text">
              {{ promo.promo_text }}<br>
              <a class="button promo-link" href="{{ promo.promo_link }}" {% if promo.promo_target %} target="_blank" {% endif %}>{{ promo.promo_cta }}</a>
            </div>
        </div>
    {% endfor %}
    </div>
  <div class="clear"></div>
</section><!-- end #promos -->