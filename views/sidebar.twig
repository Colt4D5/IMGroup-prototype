		{% elseif menu_title == 'services' %}
			{% for item in services_menu.get_items %}
				<li class="{{ item.classes | join(' ') }}"><a href="{{ item.link }}" class="service-menu-item" target="{{ item.target }}">{{ item.title }}</a></li>
			{% endfor %}
		{% elseif menu_title == 'location' %}
			{% for item in locations_menu.get_items %}
				<li class="{{ item.classes | join(' ') }}"><a href="{{ item.link }}" class="location-menu-item" target="{{ item.target }}">{{ item.title }}</a></li>
			{% endfor %}
		{% elseif menu_title == 'aveda' %}
			{% for item in aveda_menu.get_items %}
				<li class="{{ item.classes | join(' ') }}"><a href="{{ item.link }}" class="location-menu-item" target="{{ item.target }}">{{ item.title }}</a></li>
			{% endfor %}
		{% elseif menu_title == 'blog' %}
			{{ blog_sidebar }}
		{% endif %}
	</ul>
</nav>