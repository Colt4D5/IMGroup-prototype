{% extends "base.twig" %}

{% block header %}
	{{ parent() }}
	{% include 'components/headerimage.1.twig' %}
{% endblock %}

{% block sidebar %}
	{% include 'sidebar.twig' %}
{% endblock %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
			<img src="{{ post.thumbnail.src|resize(1200, 300) }}">
			<section class="article-content">
				<h1 class="article-h1">{{ post.title }}</h1>
				<p class="blog-date">Posted on <time datetime="{{ post.date|date('Y-m-d H:i:s') }}">{{ post.date }}</time> - {{ category }}</p>
				<div class="article-body">
					{{post.content}}
				</div>
			</section>

			{# who needs comments, amiright, fellas? #}
			{# <!-- comment box -->
			<section class="comment-box">
				<!-- comments -->
