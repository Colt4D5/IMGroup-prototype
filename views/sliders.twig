	<!-- Slider main container -->
	<div id="headerimage" class="swiper mySwiper show-for-medium" style="height: {{ post.header_height }};">
		<!-- Additional required wrapper -->
		<div class="swiper-wrapper">
			<!-- Slides -->
			{% for header in headers %}
				{% set desktop_img = TimberImage(header.slide_background_image).src %}
				{% set mobile_img = TimberImage(header.background_image_mobile).src %}

				{# DESKTOP HEADER #}
				<div class="swiper-slide" style="background-image: url({{ desktop_img }});" data-desktop-url="{{ desktop_img }}" data-mobile-url="{{ mobile_img }}" >
				{% if header.slide_text %}
					<div class="slide_text">
						<div class="slide_text_inner">
							{{ header.slide_text }}
						</div>
					</div>
				{% endif %}
				</div>
			{% endfor %}
		</div>
		<!-- pagination -->
		<div class="swiper-pagination"></div>

		<!-- navigation buttons -->
		<div class="swiper-button-prev"></div>
		<div class="swiper-button-next"></div>

		<!-- scrollbar -->
		{# <div class="swiper-scrollbar"></div> #}
	</div>


