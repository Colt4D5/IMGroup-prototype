{% extends "tease.twig" %}

{% block content %}
	<h2 class="post-title"><a href="{{post.link}}">{{post.title}}</a></h2>
	<p class="post-date"><time datetime="{{ post.date|date('Y-m-d H:i:s') }}">{{ post.date }}</time></p>
		<p>{{post.preview.length(100).read_more('Continue Reading')}}</p>
		{% if post.thumbnail.src %}
			<img src="{{post.thumbnail.src}}" />
		{% endif %}
{% endblock %}